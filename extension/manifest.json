{
  "manifest_version": 3,
  "name": "Opus Orb",
  "version": "1.0.0",
  "description": "Shared Opus Orb with chat persistence and MCP data access",
  "action": { "default_title": "Opus" },
  "permissions": ["storage", "activeTab", "scripting", "alarms", "tabs"],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://localhost:5000/*",
    "https://*.opus.ai/*",
    "https://app.opus.ai/*",
    "https://api.opus.ai/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "exclude_matches": [
        "http://localhost:5000/*",
        "https://localhost:5000/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["opus-orb.js"],
      "matches": ["<all_urls>"]
    }
  ]
}