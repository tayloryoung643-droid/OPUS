# Server Configuration
PORT=4000

# Required: Authentication token for MCP service
MCP_SERVICE_TOKEN=dev_token_at_least_10_chars

# Required: PostgreSQL database connection
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Optional: Application origins for CORS
APP_ORIGIN=http://localhost:5000
API_ORIGIN=http://localhost:5000

# Optional: Google Integration (for calendar/gmail tools)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Optional: Salesforce Integration (for CRM tools)
SFDC_CLIENT_ID=your-salesforce-client-id
SFDC_CLIENT_SECRET=your-salesforce-client-secret
